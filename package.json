{
  "name": "frontend-template",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "yarn env:dec && next dev",
    "build": "yarn env:dec && next build",
    "start": "next start",
    "lint": "eslint",
    "graphql-schema": "node scripts/graphql-schema.js",
    "graphql-operations": "node scripts/graphql-operations.js",
    "graphql-fragments": "node scripts/graphql-fragments.js",
    "graphql-combine": "node scripts/graphql-combine.js",
    "generate": "yarn graphql-schema && yarn graphql-operations && yarn graphql-fragments && yarn graphql-combine",
    "codegen": "graphql-codegen --config codegen.config.ts && node scripts/graphql-codegen-fix.js",
    "env:enc:dev": "yarn mkdir -p secrets && sops -e .env.development > secrets/env.development.enc",
    "env:dec:dev": "[ -f secrets/env.development.enc ] && (sops -d secrets/env.development.enc > .env.development.tmp && mv .env.development.tmp .env.development) || (echo \"ℹ️ skip: secrets/env.development.enc not found\" && [ ! -f secrets/env.development.enc ])",
    "env:enc:prod": "yarn mkdir -p secrets && sops -e .env.production > secrets/env.production.enc",
    "env:dec:prod": "[ -f secrets/env.production.enc ] && (sops -d secrets/env.production.enc > .env.production.tmp && mv .env.production.tmp .env.production) || (echo \"ℹ️ skip: secrets/env.production.enc not found\" && [ ! -f secrets/env.production.enc ])",
    "env:enc": "yarn env:enc:dev && yarn env:enc:prod",
    "env:dec": "yarn env:dec:dev && yarn env:dec:prod"
  },
  "dependencies": {
    "@apollo/client": "^4.0.11",
    "@hookform/resolvers": "^5.2.2",
    "@radix-ui/react-slot": "^1.2.4",
    "apollo-upload-client": "^19.0.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "decimal.js": "^10.6.0",
    "graphql": "^16.12.0",
    "lucide-react": "^0.561.0",
    "next": "16.0.10",
    "next-auth": "^4.24.13",
    "next-intl": "^4.6.1",
    "next-yak": "^8.0.3",
    "react": "19.2.1",
    "react-dom": "19.2.1",
    "react-hook-form": "^7.68.0",
    "rxjs": "^7.8.2",
    "tailwind-merge": "^3.4.0",
    "tailwind-variants": "^3.2.2",
    "zod": "^4.2.1",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^6.1.0",
    "@graphql-codegen/typescript": "^5.0.6",
    "@graphql-codegen/typescript-operations": "^5.0.6",
    "@graphql-codegen/typescript-react-apollo": "^4.3.4",
    "@tailwindcss/postcss": "^4",
    "@types/apollo-upload-client": "^19.0.0",
    "@types/next-auth": "^3.15.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "dotenv": "^17.2.3",
    "eslint": "^9",
    "eslint-config-next": "16.0.10",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-unused-imports": "^4.3.0",
    "prettier": "^3.7.4",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5"
  }
}
